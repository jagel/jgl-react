{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@jgl-mui/*": ["../../workspaces/react-shared/jgl-mui/src/*"],
      "@jgl-ui-lib/*": ["../../workspaces/agnostic-shared/jgl-ui-lib/src/*"],
      "@jgl-react-lib/*": ["../../workspaces/react-shared/jgl-react-lib/src/*"]
    }
  },
  "include": [
    "src",
    "../../workspaces/react-shared/jgl-mui/src",
    "../../workspaces/agnostic-shared/jgl-ui-lib/src", 
    "../../workspaces/react-shared/jgl-react-lib/src"
  ]
}